# LokiAI 环境变量配置示例
# 复制此文件为 .env.local 并填写实际值

# ========================
# Supabase 配置 (必需)
# ========================
# 从Supabase项目设置 -> API获取
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key-here
# 注意：SUPABASE_SERVICE_ROLE_KEY 具有完全访问权限，仅限服务器端使用
SUPABASE_SERVICE_ROLE_KEY=your-service-role-secret-key-here

# ========================
# 数据库连接 (可选，用于直接连接)
# ========================
# 格式：postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL=postgresql://postgres:your-database-password@db.your-project-ref.supabase.co:5432/postgres

# ========================
# 应用配置
# ========================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
# 用于加密会话的密钥，生成随机字符串
APP_SECRET=your-app-secret-key-here

# ========================
# AI 服务配置
# ========================
# Claude API (优先推荐)
NEXT_PUBLIC_CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here
# 可选：模型选择，默认使用 claude-3-5-sonnet-latest
CLAUDE_MODEL=claude-3-5-sonnet-latest

# OpenAI API (备用)
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-org-id-here
# 可选：模型选择
OPENAI_MODEL=gpt-4o-mini

# ========================
# 支付服务 (Stripe)
# ========================
# 测试环境密钥
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_SECRET_KEY=sk_test_your_test_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# 生产环境密钥（部署时替换）
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ========================
# 邮件服务 (Resend)
# ========================
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@lokiai.cn
EMAIL_FROM_NAME=LokiAI

# ========================
# 分析和监控
# ========================
# Sentry错误监控
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Google Analytics (可选)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================
# 功能开关
# ========================
# 启用/禁用功能
FEATURE_AI_CHAT=true
FEATURE_SUBSCRIPTIONS=true
FEATURE_TEAM_MANAGEMENT=true
FEATURE_ADMIN_DASHBOARD=false

# ========================
# 限制和配额
# ========================
# 免费用户每月对话次数限制
FREE_USER_MONTHLY_CONVERSATIONS=10
# 免费用户每月OKR数量限制
FREE_USER_MONTHLY_OKRS=5
# 免费用户每月情绪分析次数限制
FREE_USER_MONTHLY_MOOD_ANALYSIS=3

# ========================
# 第三方集成
# ========================
# GitHub OAuth (用于开发者登录)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (用于用户登录)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================
# 开发环境覆盖
# ========================
# 在开发环境中跳过某些检查
SKIP_EMAIL_VERIFICATION=true
SKIP_PAYMENT_REQUIRED=true
MOCK_AI_RESPONSES=false

# ========================
# 调试配置
# ========================
# 启用详细日志
DEBUG_DATABASE=false
DEBUG_API=false
DEBUG_AUTH=false
LOG_LEVEL=info